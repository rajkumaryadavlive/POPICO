<body class="user-ath">
   
   <div class="user-ath-page">
       <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8  text-center">
                    <div class="user-ath-logo">
                        <a href="#">
                            <img src="../assets/images/logo-white.png" height="80px" alt="icon">
                        </a>
                    </div>
                    <div class="user-ath-box">
                        <h4 style="color:#f8f8f8 !important">Change Password</h4>
                        <form method="POST" action="/submit-change-pass" id="password_form">
<!--
                            <div class="note note-lg note-no-icon note-danger">
                                <p>Your email and password is invalid.</p>
                            </div>
--><% if(err_msg!=undefined){ %>
    <span class="error_validate flash_msg"><%= err_msg %></span>
    <% }%>
    <% if(success_msg!=undefined){ %>
        <span class="succ_flash_msg" style="color: green;"><%= success_msg %></span>
    <% }%>

<div class="form-group  input-dash wow slideInUp">
    <input class="form-control" type="password" id="password" name="password" placeholder="Current Password" data-rule-minlength="5" data-rule-maxlength="75" data-rule-required="true"  data-msg-required="Please enter current password.">
 </div>
 <div class="form-group  input-dash wow slideInUp">
    <input class="form-control" type="password" id="new_password" name="new_password" placeholder="New Password"  data-rule-minlength="5" data-rule-maxlength="75" data-rule-required="true"  data-msg-required="Please enter new password.">
 </div>
 <div class="form-group  input-dash wow slideInUp">
    <input class="form-control" type="password" id="confrm_password" name="confrm_password"  data-rule-equalto="#new_password" placeholder="confirm password" data-rule-minlength="5" data-rule-maxlength="75" data-rule-required="true"  data-msg-required="Please enter confirm new password." data-msg-equalto="Please enter the same value again.">
 </div>
                            <div class="gaps"></div>
                            <div class="d-flex justify-content-between align-items-center">
                            
                                <button class="btn btn-common light-green btn-primary" height="80px" alt="icon">Cancel</button>
                                <button type="submit" id="sbmt_pass" class="btn btn-common light-green btn-primary">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
	<!-- JavaScript (include all script here) -->
	<script src="assets2/js/jquery.bundle.js?ver=101"></script>
	<script src="assets2/js/script.js?ver=101"></script>
