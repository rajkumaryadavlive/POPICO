<!DOCTYPE html>
<html lang="zxx" class="js">

<head>
  <meta charset="utf-8">
  <meta name="author" content="Softnio">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description"
    content="ICO Crypto is a modern and elegant landing page, created for ICO Agencies and digital crypto currency investment website.">
  <!-- Fav Icon  -->
  <link rel="shortcut icon" href="images2/favicon.png">
  <!-- Site Title  -->
  <title>User Center - ICO Crypto</title>
  <!-- Vendor Bundle CSS -->
  <link rel="stylesheet" href="assets2/css/vendor.bundle.css?ver=101">
  <!-- Custom styles for this template -->
  <link rel="stylesheet" href="assets2/css/style.css?ver=101">
  <style>
    .error_validate {
      color: blueviolet;
    }
  </style>

</head>

<body class="user-ath">

  <div class="user-ath-page">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8  text-center">
          <div class="user-ath-logo">
            <a href="#">
              <img src="images2/logo-sm.png" srcset="images/logo-sm2x.png 2x" alt="icon">
            </a>
          </div>
          <div class="user-ath-box">
            <div class="status status-thank">

              <form id="otp_form" action="/verify_tfa" method="POST">
                <h2>OTP</h2>
                <span class="status-text">Please enter the OTP to verify your transaction.</span>
                <p class="status-text">An One Time Password sent to your e-mail address.</p>
                <%if(err_msg!=""){%>
                  <div class="alert alert-danger">
                    <%=err_msg%>
                  </div>
                  <%} if(success_msg!="" ){%>
                    <div class="alert alert-success">
                      <%=success_msg%>
                    </div>
                    <%}%>
                      <!-- <h2>Login</h2> -->
                      <div class="form-group">
                        <!-- <label>Password</label> -->
                        <input type="text" class="form-control" placeholder="Enter OTP" name='otp' id='otp'
                          data-rule-required="true" data-msg-required="Please enter OTP.">
                      </div>

                      <div class="gaps"></div>
                      <div class="d-flex justify-content-between align-items-center">
                        <!-- <a class="purple-btn-index" href="/login">Login</a> -->
                        <button type="submit" class="btn btn-primary" class="purple-btn-index"
                          id="submit_verify_account">Submit</button>
                      </div>

              </form>
            </div><!-- .status -->
          </div>
          <div class="gaps-2x"></div>
          <div class="form-note">

          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- JavaScript (include all script here) -->
  <script src="assets2/js/jquery.bundle.js?ver=101"></script>
  <script src="assets2/js/script.js?ver=101"></script>
</body>

</html>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>

<script type="text/javascript">
  $('#otp_form').validate({
    onfocusout: function (element) {
      this.element(element);
    },
    errorClass: 'error_validate',
    errorElement: 'span',
    highlight: function (element, errorClass) {
      $(element).removeClass(errorClass);
    },
    submitHandler: function (form) {
      $('#submit_login').attr('disabled', true);
      form.submit();
    }
  });
</script>